#!/bin/bash
yum update -y
yum install -y httpd
OS_VERSION=$(cat /proc/version)
cd /var/www/html/
touch index.html
cat > index.html << EOF
<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <title>Button align center</title>

      <style>
         .flex-parent {
            display: flex;
         }

         .jc-center {
            justify-content: center;
         }

         button.margin-right {
            margin-right: 20px;
         }
      </style>
   </head>
   <body>
      <h1>
         <p><font color=green> Hello World <br> $OS_VERSION 
      </h1>
   </body>
</html>
systemctl start httpd
systemctl enable httpd
